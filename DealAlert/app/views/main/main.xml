	    <ListView id="activitiesView" items="{{ dealItems }}" itemTap="onActivityTap">
            <ListView.itemTemplate>
                <GridLayout columns="auto, *" >
                    <StackLayout>
                        <Image src="{{ avatarImageSource || defaultAvatarImageSource }}" stretch="fill" cssClass="activity-avatar"/>
                    </StackLayout>
                    <StackLayout cssClass="activity-container" col="1">
                        <Label cssClass="activity-name">
                            <Label.formattedText>
                                <FormattedString>
                                  <FormattedString.spans>
                                    <Span text="{{ Title }}" fontAttributes="Bold" />
                                  </FormattedString.spans>
                                </FormattedString>
                              </Label.formattedText>
                        </Label>
                        <Label text="{{ Description }}" cssClass="activity-summary" textWrap="true"/>
                        <Image src="{{ pictureUrl }}" cssClass="activity-picture android" stretch="aspectFit" />
                        <Label text="{{ CreatedAt, CreatedAt | dateConverter('DD.MM.YYYY') }}" cssClass="activity-date"/>
                  </StackLayout>
                </GridLayout> 
            </ListView.itemTemplate>  
        </ListView>

	  </StackLayout>
</Page>
