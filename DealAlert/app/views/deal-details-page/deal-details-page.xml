<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
  <StackLayout>
  	<Label text="Deal Details View Model" class="title"/>
  	<Button text="Load Simple Data" tap="{{ loadDataAction }}" />
    <StackLayout orientation="horizontal">
    	<Image src="{{ pictureSrc }}" stretch ="none"  />
    	<StackLayout>
  	  		<Label text="{{ title }}" textWrap="true" />
    		<Label text="{{ description }}" textWrap="true" />
    		<Label text="{{ validUntil }}" textWrap="true" />
    		<Label text="{{ promoPrice }}" textWrap="true" />
    		<Label text="{{ regularPrice }}" textWrap="true" />
    	</StackLayout>
    </StackLayout>
  </StackLayout>
</Page>